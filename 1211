#include <iostream>
#include <string>
using namespace std;
string caesarEncrypt(string text, int shift) {
    string encrypted = "";
    for (int i = 0; i < text.length(); i++) {
        char c = text[i];
        if ((c >= 'a' && c <= 'z') || (c >= 'A' && c <= 'Z')) {
            char base = (c >= 'a') ? 'a' : 'A';
            encrypted += (c - base + shift) % 26 + base;
        } else {
            encrypted += c;
        }
    }
    return encrypted;
}

int main() {
    string text;
    int shift;

    cout << "If you want encryption, please enter your text: ";
    getline(cin, text);

    cout << "Enter the shift value: ";
    cin >> shift;

    shift = shift % 26;

    string encryptedText = caesarEncrypt(text, shift);

    cout << "Encrypted text: " << encryptedText << endl;

    cout << "Uppercase letters: ";
    for (int i = 0; i < encryptedText.length(); i++) {
        if (encryptedText[i] >= 'A' && encryptedText[i] <= 'Z') {
            cout << encryptedText[i];
        }
    }
    cout << endl;

    cout << "Lowercase letters: ";
    for (int i = 0; i < encryptedText.length(); i++) {
        if (encryptedText[i] >= 'a' && encryptedText[i] <= 'z') {
            cout << encryptedText[i];
        }
    }
    cout << endl;

    return 0;
}
